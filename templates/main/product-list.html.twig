{% extends 'layout.html.twig' %}

{% block title %}Produits{% endblock %}

{% block content %}
			<div class="row">
				<div class="col-md-3">
					<p class="lead">Nos marques</p>
					<div class="list-group">
						<a href="#" class="list-group-item active">Toutes les marques</a>
						{% for brand in brands %}
						<a href="#" class="list-group-item">{{brand.name|capitalize}}</a>
						{% endfor %}
					</div>
				</div>
				<div class="col-md-9">	
					<p class="lead">Nos produits " Toutes les marques "</p>
					<div class="row text-center">
					{% for product in products %}
						<div class="col-md-4 col-sm-6 hero-feature">
							<div class="thumbnail">
								<img src="{{asset('assets/img/products/shoe-'~product.id~'.jpg')}}" alt="Nom du produit">
								<div class="caption">
									<h3>{{product.name}}</h3>
									<p>{{product.description}}</p>
									<p>
										<span class="badge">{{product.price}}â‚¬</span>
										<a href="{{path('store_show_product',  {'id': product.id, 'slug': product.slug}) }}" class="btn btn-default">Voir la fiche</a>
									</p>
								</div>
							</div>
					</div>
						
					{% endfor %}
					</div>
				</div>
			</div>

{% endblock %}